# Node.js Environment Variables
# These are required for the Node.js version of the application

# Cloudflare Account ID
R2_ACCOUNT_ID=your-cloudflare-account-id

# R2 S3 API Access Key ID (generate from Cloudflare dashboard)
R2_S3_ACCESS_KEY_ID=your-r2-s3-access-key-id

# R2 S3 API Secret Access Key (generate from Cloudflare dashboard)
R2_S3_SECRET_ACCESS_KEY=your-r2-s3-secret-access-key

# R2 Bucket Name (for production)
R2_BUCKET_NAME=my-storybooks-production

# Server Port (optional, defaults to 3000)
PORT=3000